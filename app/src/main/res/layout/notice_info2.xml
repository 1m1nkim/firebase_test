            android:layout_width="172px"
            android:layout_height="72px"
            android:layout_marginStart="762px"
            android:layout_marginTop="133px"
            android:gravity="center_vertical"
            android:text="2023-03-21"
            android:textAppearance="@style/notice_info_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:layout_width="906px"
            android:layout_height="5px"
            android:layout_marginStart="37px"
            android:layout_marginTop="215px"
            android:background="@drawable/main_line"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="910px"
            android:layout_height="1470px"
            android:layout_marginStart="35px"
            android:layout_marginTop="242px"
            android:text="[2023년 한일 학술문화 및 청소년교류 대학생단 방일연수 참가자 선발 안내]\n국립국제교육원에서 추진하고 있는 한일 학술문화 및 청소년 교류 사업에 대한 바일 대학생단 선발 계획을 붙임과 같이 안내하여 드립니다.\n\n관심있는 많은 학생들의 참여를 바랍니다."
            android:textAppearance="@style/notice_info_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/notice_info_btn"
        android:layout_width="160px"
        android:layout_height="83.48px"
        android:layout_marginLeft="460px"
        android:layout_marginTop="2105px"
        android:background="@drawable/notice_btn"
        android:text="목록"
        android:textColor="@color/white"
        android:textSize="27px"
        android:textStyle="bold" />


</RelativeLayout>