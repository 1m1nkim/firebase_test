<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/some_id"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToOutline="true"
    android:background="@drawable/main_login_test"
    >

    <View
        android:id="@+id/title_notice"
        android:layout_width="81px"
        android:layout_height="81px"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="391px"
        android:layout_marginTop="34px"
        android:background="@drawable/main_announcement" />

    <TextView
        android:id="@+id/title_notice_text"
        android:layout_width="204px"
        android:layout_height="66px"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="184dp"
        android:layout_marginTop="16dp"
        android:gravity="center_vertical"
        android:text="공지사항"
        android:textAppearance="@style/sche_title_s" />

    <View
        android:id="@+id/dot_line"
        android:layout_width="934px"
        android:layout_height="10px"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="173px"
        android:background="@drawable/dot_line"
        android:elevation="4px" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/announcement_view"
        android:layout_width="963px"
        android:layout_height="1794px"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="59px"
        android:layout_marginTop="258px"
        android:background="@drawable/notice_info_main">

        <View
            android:layout_width="960px"
            android:layout_height="10px"
            android:layout_marginTop="1px"
            android:background="@drawable/notice_info_tbline"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:layout_width="960px"
            android:layout_height="10px"
            android:layout_marginTop="1784px"
            android:background="@drawable/notice_info_tbline"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="930px"
            android:layout_height="120px"
            android:layout_marginStart="37px"
            android:layout_marginTop="2px"
            android:gravity="center_vertical"
            android:text="[혁신] 서울서부권 연합 공유프로그램-ESG 혁신 아이디어 브레인라이팅 참가자 모집 안내 (~6/13)"
            android:textAppearance="@style/notice_info_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:layout_width="897px"
            android:layout_height="5px"
            android:layout_marginStart="37px"
            android:layout_marginTop="121px"
            android:background="@drawable/main_line"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="90px"
            android:layout_height="72px"
            android:layout_marginStart="37px"
            android:layout_marginTop="133px"
            android:gravity="center_vertical"
            android:text="작성자"
            android:textAppearance="@style/notice_info_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:layout_width="1px"
            android:layout_height="42px"
            android:layout_marginStart="144px"
            android:layout_marginTop="148px"
            android:background="@drawable/line_lay_sche"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="180px"
            android:layout_height="72px"
            android:layout_marginStart="161px"
            android:layout_marginTop="133px"
            android:gravity="center_vertical"
            android:text="대학혁신본부"
            android:textAppearance="@style/notice_info_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="56px"
            android:layout_height="72px"
            android:layout_marginStart="672px"
            android:layout_marginTop="133px"
            android:gravity="center_vertical"
            android:text="날짜"
            android:textAppearance="@style/notice_info_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:layout_width="1px"
            android:layout_height="42px"
            android:layout_marginStart="745px"
            android:layout_marginTop="148px"
            android:background="@drawable/line_lay_sche"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="172px"
            android:layout_height="72px"
            android:layout_marginStart="762px"
            android:layout_marginTop="133px"
            android:gravity="center_vertical"
            android:text="2023-06-08"
            android:textAppearance="@style/notice_info_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:layout_width="906px"
            android:layout_height="5px"
            android:layout_marginStart="37px"
            android:layout_marginTop="215px"
            android:background="@drawable/main_line"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="910px"
            android:layout_height="1470px"
            android:layout_marginStart="35px"
            android:layout_marginTop="242px"
            android:text="서울 서부권 연합 공유프로그램 [ESG 혁신 아이디어 브레인라이팅] 참가자를 모집합니다.\n\n\n\n해당 프로그램은 명지전문대학, 배화여자대학교, 서울여자간호대학교 3개 대학이 함께 참여하는 프로그램입니다.\n\n\n\n지속가능한 사회·지구를 만들기 위해 필수적 요소가 된 ESG경영에 대한 전문가 초청 특강 진행 후 연합 조를 편성하여 아이디어 도출활동(브레인라이팅)을 진행합니다.\n\n\n\n타대학 학생들과 함께 다양한 의견을 공유할 수 있는 해당 프로그램에 많은 관심과 참여 부탁드립니다."
            android:textAppearance="@style/notice_info_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/notice_info_btn"
        android:layout_width="160px"
        android:layout_height="83.48px"
        android:layout_marginLeft="460px"
        android:layout_marginTop="2105px"
        android:background="@drawable/notice_btn"
        android:text="목록"
        android:textColor="@color/white"
        android:textSize="27px"
        android:textStyle="bold" />


</RelativeLayout>